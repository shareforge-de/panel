<!DOCTYPE html>
<html lang="en">
<%- include('./components/head') %>

  <body>
    <div class="color-1 container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/sidebar') %>
        <!-- partial -->
        <div class="color-1 container-fluid page-body-wrapper">
          <!-- partial:partials/_navbar.html -->
          <%- include('./components/topnav') %>
            <!-- partial -->
            <div class="color-1 main-panel">
              <div class="color-1 content-wrapper">

                <h2>Dashboard</h2>
                <p class="text-gray">View your resources & other things here.</p>

                <%- include('./components/alert') %>
                  <% if (req.query.err=="ALREADY_OPEN" ) { %>
                    <div class="alert">
                      You can't open multiple tabs!
                    </div>
                    <% } else if (req.query.err==="CANNOTAFFORDRENEWAL" ) { %>
                      <div class="alert">
                        You need at least <%= settings.renewals.cost %> coins to purchase a server renewal!
                      </div>
                      <% } if (req.query.success==='RENEWED' ) { %>
                        <div class="alert" style="background-color: green;">
                          Succesfully purchased renewal for server!
                        </div>
                        <% } if (req.session.newaccount || req.session.password) { %>
                          <div style="background-color: #007fcc; border-radius: 15px" class="alert">
                            <% if (req.session.newaccount) { %>
                              Welcome! You are a first time user<br>
                              <% } %>
                                <% if (req.session.password) { %>
                                  Your password has been changed to <%= req.session.password %>, however if you do not
                                    save that then you can just reset it via the "Account Settings" page
                                    <% } else { %>
                                      Please head over to Settings to create a password.
                                      <% } %>
                          </div>
                          <% } %>
                            <%- include('./components/status') %>
                              <div class="row ">
                                <div class="col-md-6 grid-margin stretch-card">
                                  <div class="card">
                                    <div class="card-body">
                                      <%- include('./boxes/1') %>
                                    </div>
                                  </div>
                                </div>
                                <div class="col-md-6 grid-margin stretch-card">
                                  <div class="card">
                                    <div class="card-body">
                                      <%- include('./boxes/2') %>
                                    </div>
                                  </div>
                                </div>
                              </div>
              </div>

              <!-- content-wrapper ends -->
              <%- include('./components/footer') %>
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <%- include('./components/scripts') %>
  </body>

</html>